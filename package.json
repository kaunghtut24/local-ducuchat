{
  "name": "document-chat-system",
  "version": "1.0.0",
  "description": "Open-source document management system with AI-powered chat interface",
  "private": false,
  "keywords": [
    "document-management",
    "chat",
    "ai",
    "nextjs",
    "typescript",
    "react",
    "open-source"
  ],
  "author": "Document Chat System Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/document-chat-system.git"
  },
  "scripts": {
    "setup": "node scripts/setup.js",
    "dev": "next dev",
    "dev:full": "concurrently \"npm run dev:next\" \"npm run dev:inngest\" \"npm run dev:docling\" --names \"NEXT,INNGEST,DOCLING\" --prefix-colors \"cyan,magenta,yellow\"",
    "dev:next": "next dev",
    "dev:inngest": "./scripts/start-inngest.sh",
    "dev:docling": "./services/docling-api/start.sh",
    "dev:observability": "./scripts/start-observability.sh",
    "build": "prisma generate && next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "dotenv -e .env -- prisma generate",
    "db:push": "dotenv -e .env -- prisma db push",
    "db:migrate": "dotenv -e .env -- prisma migrate dev",
    "db:seed": "dotenv -e .env -- tsx prisma/seed.ts",
    "db:studio": "dotenv -e .env -- prisma studio",
    "db:reset": "prisma migrate reset",
    "observability:start": "./scripts/start-observability.sh",
    "observability:stop": "./scripts/stop-observability.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev:setup": "npm install && npm run db:generate && npm run db:push",
    "dev:reset": "npm run db:reset && npm run db:seed && npm run dev"
  },
