# Database
DATABASE_URL="postgresql://username:password@localhost:5432/document_chat_db"

# Authentication (Lucia - Self-hosted)
# No external auth service required - authentication is handled by Lucia with database sessions
# Session cookies are automatically managed by Lucia

# Legacy Authentication (Clerk) - DEPRECATED - Remove after migration complete
# These variables are no longer needed after migrating to Lucia
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_publishable_key"
# CLERK_SECRET_KEY="sk_test_your_clerk_secret_key"
# CLERK_WEBHOOK_SECRET="whsec_your_clerk_webhook_secret"
# NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
# NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
# NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
# NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/profile"

# Security Keys
INTERNAL_API_KEY="your-internal-api-key"
CRON_SECRET="your-cron-secret"
JWT_SECRET="your-jwt-secret"
# NEXTAUTH_SECRET is used for session encryption with Lucia
NEXTAUTH_SECRET="your-nextauth-secret-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# Background Job Processing (Inngest)
INNGEST_EVENT_KEY="your-inngest-event-key"
INNGEST_SIGNING_KEY="your-inngest-signing-key"

# AI Providers - Primary Configuration
# OpenRouter (Recommended - 100+ models including Anthropic, Google, etc.)
OPENROUTER_API_KEY="your-openrouter-api-key"
OPENROUTER_APP_NAME="Document-Chat-System"
OPENROUTER_SITE_URL="https://document-chat-system.vercel.app"
OPENROUTER_SMART_ROUTING=true
OPENROUTER_COST_OPTIMIZATION="balanced"
OPENROUTER_FALLBACK_STRATEGY="hybrid"

# Direct AI Provider Keys (Alternative to OpenRouter)
OPENAI_API_KEY="sk-your-openai-api-key"
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"
GOOGLE_GENERATIVE_AI_API_KEY="your-google-ai-api-key"

# Azure OpenAI (Optional)
AZURE_OPENAI_API_KEY="your-azure-openai-api-key"
AZURE_OPENAI_ENDPOINT="your-azure-openai-endpoint"
AZURE_OPENAI_API_VERSION="2024-02-01"
AZURE_OPENAI_DEPLOYMENT_NAME="your-deployment-name"

# Prompt Caching Configuration
OPENROUTER_PROMPT_CACHE_ENABLED=true
OPENROUTER_PROMPT_CACHE_TTL=300
OPENROUTER_PROMPT_CACHE_MIN_TOKENS=1024
OPENROUTER_CACHE_BREAKPOINT_STRATEGY="auto"

# Vector Database (Pinecone - Optional for advanced document search)
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="us-east-1"
PINECONE_INDEX_NAME="document-chat-index"

# Vector Storage - pgvector (Alternative to Pinecone)
PGVECTOR_CONNECTION_STRING="postgresql://username:password@localhost:5432/document_chat_db"
PGVECTOR_TABLE_NAME="embeddings"
ENABLE_PGVECTOR_FALLBACK=true

# Vector Search Configuration
VECTOR_SEARCH_TIMEOUT_MS=5000
VECTOR_SEARCH_EMBEDDING_TIMEOUT_MS=10000
PINECONE_QUERY_TIMEOUT_MS=800

# File Storage (Supabase)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"
SUPABASE_PASSWORD="your-supabase-password"

# Redis Cache (Optional - for better performance)
# Option 1: Upstash Redis (Managed, recommended for production)
UPSTASH_REDIS_REST_URL="your-upstash-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# Option 2: Self-hosted Redis (for development)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="127.0.0.1"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_USERNAME=""

# Redis Fallback Configuration
REDIS_FALLBACK_URL="redis://localhost:6379"
REDIS_FALLBACK_TOKEN="dev-token"
REDIS_CONNECTION_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100
REDIS_KEEP_ALIVE=30000
MEMORY_CACHE_CLEANUP_INTERVAL=300000

# Cache TTL Configuration (in seconds unless specified)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600
CACHE_TTL_DAY=8640
CACHE_TTL_WEEK=604800
PRICING_CACHE_TTL=3000

# File Upload (UploadThing)
UPLOADTHING_SECRET="sk_live_your_uploadthing_secret"
UPLOADTHING_APP_ID="your_uploadthing_app_id"

# Billing (Stripe - Optional)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Observability (Prometheus + Grafana)
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001
METRICS_ENDPOINT_ENABLED=true

# Stripe Price IDs (if using billing)
STRIPE_PRICE_STARTER="price_your_starter_price_id"
STRIPE_PRICE_PROFESSIONAL="price_your_professional_price_id"
STRIPE_PRICE_AGENCY="price_your_agency_price_id"

# Application Settings
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NODE_ENV="development"

# Docling Service (Advanced Document Processing - OPTIONAL)
# Set to true for superior document processing (requires Python service)
# See DOCLING_INTEGRATION.md for setup instructions
# Development: http://localhost:8001
# Production: https://your-docling-service.up.railway.app
DOCLING_SERVICE_URL="http://localhost:8001"
DOCLING_ENABLED=false
DOCLING_TIMEOUT=30000

# AI Service Configuration
AI_ENABLE_FALLBACK=true
AI_ENABLE_CIRCUIT_BREAKER=true
AI_ENABLE_CACHING=true
AI_DEFAULT_TIMEOUT=300
AI_MAX_CONCURRENT_REQUESTS=100
AI_MAX_TOKENS=16000

# AI Cost Limits (Optional)
AI_DAILY_COST_LIMIT=100.00
AI_MONTHLY_COST_LIMIT=1000.00
AI_PER_REQUEST_COST_LIMIT=5.00

# Rate Limiting Configuration
RATE_LIMIT_AI_WINDOW=60000
RATE_LIMIT_AI_MAX=10
RATE_LIMIT_API_WINDOW=60000
RATE_LIMIT_API_MAX=100
RATE_LIMIT_UPLOAD_WINDOW=60000
RATE_LIMIT_UPLOAD_MAX=5
RATE_LIMIT_SEARCH_WINDOW=60000
RATE_LIMIT_SEARCH_MAX=20

# File Upload Configuration
MAX_FILE_UPLOAD_SIZE=10485760
DEFAULT_PAGE_SIZE=25
MAX_PAGE_SIZE=100

# Error Handling & Circuit Breaker Configuration
ERROR_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
ERROR_CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30000
ERROR_CIRCUIT_BREAKER_MONITORING_WINDOW=60000
ERROR_CIRCUIT_BREAKER_ERROR_RATE=0.1
ERROR_CIRCUIT_BREAKER_HALF_OPEN_CALLS=3

# Retry Configuration
ERROR_RETRY_MAX_ATTEMPTS=3
ERROR_RETRY_BASE_DELAY=100
ERROR_RETRY_MAX_DELAY=30000
ERROR_RETRY_JITTER_FACTOR=0.1

# AI Service Error Configuration
ERROR_AI_TIMEOUT_MS=30000
ERROR_AI_RATE_LIMIT_WINDOW=360000
ERROR_AI_COST_WARNING=100
ERROR_AI_COST_CRITICAL=500
ERROR_AI_FALLBACK_DELAY=1000

# Security Configuration
HSTS_MAX_AGE=31536000
CSP_NONCE_SIZE=16

# Security Domains
STRIPE_PUBLISHABLE_KEY_DOMAIN="https://js.stripe.com"
# CLERK_FRONTEND_API is deprecated - no longer needed with Lucia auth
# CLERK_FRONTEND_API="https://api.clerk.dev"
CAPTCHA_DOMAINS="https://www.google.com,https://www.gstatic.com,https://hcaptcha.com,https://assets.hcaptcha.com"

# Performance Configuration
API_TIMEOUT=30000
DATABASE_TIMEOUT=1000
CACHE_TIMEOUT=5000

# Developer Configuration
DEVELOPER_EMAIL="your.email@example.com"

# Development Error Settings
ERROR_DEV_CONSOLE=true
ERROR_DEV_DETAILED=true
ERROR_DEV_MOCK_ERRORS=false
ERROR_DEV_VERBOSE=false

# Contact Information
SUPPORT_EMAIL="support@your-domain.com"
SUPPORT_NAME="Document Chat System Support"

# PayPal Donation Settings
NEXT_PUBLIC_PAYPAL_EMAIL=your-paypal@email.com
